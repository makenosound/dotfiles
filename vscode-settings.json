// Place your settings in this file to overwrite the default settings
{
  // "editor.fontSize": 14,
  // "editor.lineHeight": 0,
  // "editor.fontFamily": "SF Mono Regular",
  "editor.fontSize": 18,
  "editor.fontFamily": "OperatorMono-Book",
  "editor.tabSize": 2,
  "editor.renderWhitespace": "boundary",
  "editor.autoIndent": true,
  "editor.rulers": [80, 120],
  "files.exclude": {
    "node_modules": true,
    "public/assets": true,
    "release-builds": true
  },
  "workbench.startupEditor": "newUntitledFile",
  // Controls if opened editors show as preview. Preview editors are reused until they are kept (e.g. via double click or editing).
  "workbench.editor.enablePreview": false,
  "workbench.quickOpen.closeOnFocusLost": false,
  "workbench.colorTheme": "Alabaster",
  // "workbench.colorTheme": "Ayu Light",

  // Controls if the minimap is shown
  "editor.minimap.enabled": true,
  "editor.minimap.renderCharacters": false,

  // Beautify
  "beautify.language": {
    "css": [
      "scss"
    ],
    "html": [
      "htm",
      "html"
    ]
  },
  "workbench.activityBar.visible": false,
  "window.zoomLevel": 0,
  // Hide sidebar stuff
  "docker.showExplorer": false,
  "explorer.openEditors.visible": 0,
  "workbench.iconTheme": "ayu",
  "bracketPairColorizer.consecutivePairColors": [
    "()",
    "[]",
    "{}",
    [
      "mediumslateblue",
      "limegreen",
      "goldenrod"
    ],
    "Red"
  ],
  "bracketPairColorizer.independentPairColors": [
    [
      "()",
      [
        "mediumslateblue",
        "limegreen",
        "goldenrod"
      ],
      "Red"
    ],
    [
      "[]",
      [
        "mediumslateblue",
        "limegreen",
        "goldenrod"
      ],
      "Red"
    ],
    [
      "{}",
      [
        "mediumslateblue",
        "limegreen",
        "goldenrod"
      ],
      "Red"
    ]
  ],
  "explorer.confirmDragAndDrop": false,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "javascript.updateImportsOnFileMove.enabled": "always",
  "github.hosts": [
    {
      "host": "https://github.com",
      "username": "oauth",
      "token": "system"
    }
  ],
  // phpfmt
  "phpfmt.indent_with_space": 2,
  "phpfmt.psr2": false,
  "breadcrumbs.enabled": true,
  "solargraph.commandPath": "/Users/max/.rbenv/shims/solargraph",
  // Ruby
  "ruby.lint": {
    "reek": false,
    "rubocop": true,
    "ruby": true,
    "fasterer": false,
    "debride": false,
    "ruby-lint": false
  },
  "editor.fontWeight": "500",
  "editor.lineHeight": 25,
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "files.insertFinalNewline": true,
  "files.defaultLanguage": "markdown"
}